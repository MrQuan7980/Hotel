<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Them.BookingHotel" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <style name="Theme.BookingHotel" parent="Base.Them.BookingHotel" >
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="textDemo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ovalNext">
        <item name="alpha">0.7</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:color">@color/white</item>
        <item name="android:background">@drawable/oval_next</item>
        <item name="android:layout_marginBottom">60dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="imageView">
        <item name="tint">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="imageSignIn">

        <item name="android:background">@mipmap/image_login</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">400dp</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/dg_sign_in</item>
    </style>

    <style name="LinearLayoutRegister">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">540dp</item>
        <item name="android:background">@drawable/dg_sign_in</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textForgot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    
    <style name="buttonWhite">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="LinearLayoutAuthentication">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="textViewContentBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="progressbar">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:indeterminateTint">@color/blue</item>
    </style>

    <style name="ConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="textTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="textTitleInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="imageBack">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:src">@drawable/back</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="buttonBarItem_LinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="buttonBarItem_ImageView">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:tint">@color/blue</item>
    </style>

    <style name="buttonBarItem_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="buttonBarItem_View">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/bg_dark_blue</item>
    </style>

    <style name="linearLayoutBooking">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="textViewContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>
    
    <style name="bgReservation">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:color">@color/primary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button_reservation</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="offBgReservation">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:color">@color/primary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="editTextInputOTP">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_input_otp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="constrainForgotPassword">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>



    // detail room

    <style name="frameImage">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="bgOutsideImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:background">@drawable/bg_image_mini_blue</item>
    </style>

    <style name="bgImageInSide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:background">@drawable/image_mini_detail</item>
        <item name="android:clipToOutline" tools:targetApi="31" tools:ignore="ContentDescription">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="bgIconDetail">
        <item name="android:layout_width">23dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="tint" tools:ignore="MissingConstraints,UseAppTint, ContentDescription" >@color/darkBlue</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="textViewDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">17dp</item>
    </style>

    <style name="setTextDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxWidth">255dp</item>
        <item name="android:gravity">end</item>

    </style>

    <style name="linearImageDetail">
        <item name="android:background">@drawable/bg_frame_images</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:layout_marginEnd">45dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="textViewReview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="linearImageMini">
        <item name="android:background">@drawable/bg_frame_images</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:layout_marginEnd">45dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="constrainInformation">
        <item name="android:background">@drawable/bg_constraint_information_room</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="linearButton">
        <item name="android:background">@drawable/bg_frame_images</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:baselineAligned" tools:ignore="UselessLeaf">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="textViewIntroduce">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:justificationMode" tools:targetApi="26">inter_word</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>


    <style name="setTextChar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">start</item>
        <item name="android:maxWidth">255dp</item>

    </style>

    <style name="inputPlane">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginTop"  tools:ignore="Autofill,LabelFor,RtlSymmetry">8dp</item>
        <item name="android:background">@drawable/bg_input_plane</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="inputConfirm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:inputType" tools:ignore="Autofill,LabelFor,RtlSymmetry">text</item>
        <item name="android:background">@drawable/bg_input_plane</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="inputCar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/bg_input_plane</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    
    
    <style name="textViewHistory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="bgViewImageHeadHistory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_button_reservation</item>
    </style>
    
</resources>
