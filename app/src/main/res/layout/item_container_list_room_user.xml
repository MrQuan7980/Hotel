<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_room">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/picUrl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        style="@style/textViewTitle"
        android:id="@+id/titleRoom"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@+id/picUrl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:srcCompat="@drawable/ic_bed"
        app:tint="@color/darkBlue"
        app:layout_constraintStart_toEndOf="@+id/picUrl"
        app:layout_constraintTop_toBottomOf="@+id/titleRoom"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/textViewContentBold"
        android:id="@+id/textArea"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/icon"
        app:layout_constraintBottom_toBottomOf="@+id/icon"/>

    <TextView
        android:id="@+id/textMet"
        style="@style/textViewContentBold"
        android:text="@string/area"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/textArea"
        app:layout_constraintTop_toTopOf="@+id/icon"
        app:layout_constraintBottom_toBottomOf="@+id/icon"/>

    <TextView
        style="@style/textViewContentBold"
        android:id="@+id/textMaxPeople"
        android:text="@string/maxPeople"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/icon"
        app:layout_constraintStart_toEndOf="@+id/textMet"
        app:layout_constraintBottom_toBottomOf="@+id/icon"/>

    <TextView
        style="@style/textViewContentBold"
        android:id="@+id/people"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/icon"
        app:layout_constraintStart_toEndOf="@+id/textMaxPeople"
        app:layout_constraintBottom_toBottomOf="@+id/icon"/>

    <ImageView
        android:id="@+id/icon_people"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        app:srcCompat="@drawable/ic_person"
        app:tint="@color/darkBlue"
        app:layout_constraintStart_toEndOf="@+id/people"
        app:layout_constraintTop_toTopOf="@+id/icon"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/textViewTitle"
        android:id="@+id/textMoney"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@+id/picUrl"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        style="@style/textViewTitle"
        android:text="@string/customer"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@+id/textMoney"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>