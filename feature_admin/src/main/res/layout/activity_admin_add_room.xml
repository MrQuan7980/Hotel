<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.room.AdminAddRoomActivity">

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.room.AdminAddRoomActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessLeaf">

                <LinearLayout
                    android:id="@+id/linearNumberRoom"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="60dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">

                    <EditText
                        android:id="@+id/inputNumberRoom"
                        android:hint="@string/numberRoom"
                        android:inputType="number"
                        android:paddingStart="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        style="@style/editTextAddRoom"
                        tools:ignore="LabelFor,RtlSymmetry" />

                    <EditText
                        android:id="@+id/inputCity"
                        android:hint="@string/textCity"
                        android:layout_weight="1"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="7dp"
                        android:inputType="text"
                        android:layout_marginEnd="16dp"
                        style="@style/editTextAddRoom"
                        tools:ignore="LabelFor" />

                </LinearLayout>

                <EditText
                    android:id="@+id/inputTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/linearNumberRoom"
                    android:hint="@string/roomName"
                    android:inputType="text"
                    android:background="@drawable/bg_input_home"
                    style="@style/editText" />

                <EditText
                    android:id="@+id/inputLocation"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/inputTitle"
                    android:hint="@string/textLocation"
                    android:inputType="text"
                    android:background="@drawable/bg_input_home"
                    style="@style/editText"
                    tools:ignore="LabelFor" />

                <EditText
                    android:id="@+id/imageRoomOne"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/inputLocation"
                    android:hint="@string/image1"
                    android:inputType="text"
                    android:background="@drawable/bg_input_home"
                    style="@style/editText"
                    tools:ignore="LabelFor" />

                <EditText
                    android:id="@+id/imageRoomTwo"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageRoomOne"
                    android:hint="@string/image1"
                    android:inputType="text"
                    android:background="@drawable/bg_input_home"
                    style="@style/editText"
                    tools:ignore="LabelFor" />

                <EditText
                    android:id="@+id/imageRoomThree"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageRoomTwo"
                    android:hint="@string/image1"
                    android:inputType="text"
                    android:background="@drawable/bg_input_home"
                    style="@style/editText"
                    tools:ignore="LabelFor" />

                <EditText
                    android:id="@+id/imageRoomFour"
                    android:hint="@string/image2"
                    android:inputType="text"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageRoomThree"
                    android:background="@drawable/bg_input_home"
                    style="@style/editText"
                    tools:ignore="LabelFor" />

                <EditText
                    android:id="@+id/imageRoomFive"
                    android:hint="@string/image2"
                    android:inputType="text"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageRoomFour"
                    style="@style/editText"
                    android:background="@drawable/bg_input_home"
                    tools:ignore="LabelFor" />

                <EditText
                    android:id="@+id/inputDate"
                    android:hint="@string/textDate"
                    android:inputType="date"
                    android:clickable="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageRoomFive"
                    android:background="@drawable/bg_input_home"
                    android:focusable="false"
                    style="@style/editText"
                    tools:ignore="KeyboardInaccessibleWidget" />
                <LinearLayout
                    android:id="@+id/linearMoney"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/inputDate"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="62dp">

                    <EditText
                        android:id="@+id/inputMoney"
                        android:hint="@string/textMoney"
                        android:inputType="text"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1.5"
                        style="@style/editTextAddRoom"
                        tools:ignore="LabelFor" />

                    <EditText
                        android:id="@+id/inputPeople"
                        android:hint="@string/textMaxPeople"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="16dp"
                        style="@style/editTextAddRoom"
                        tools:ignore="LabelFor" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearArea"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linearMoney"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">

                    <EditText
                        android:id="@+id/inputDiscount"
                        android:hint="@string/textDiscount"
                        android:inputType="text"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        style="@style/editTextAddRoom"
                        tools:ignore="LabelFor" />

                    <EditText
                        android:id="@+id/inputArea"
                        android:hint="@string/textAcreage"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="16dp"
                        style="@style/editTextAddRoom"
                        tools:ignore="LabelFor" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linearArea"
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnAdminAddRoom"
                        android:text="@string/btnAddRoom"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:clipToOutline="true"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_button_admin_add_room"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"/>

                    <ProgressBar
                        android:id="@+id/progressbar"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:indeterminate="true"
                        style= "@style/progressbar"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/iconBack"
        android:layout_marginTop="10dp"
        style="@style/textForgot"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:importantForAccessibility="no"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/imageBack"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
